	public void initOrderLine(){
		Map<String, Shipments> shipmentMap = new Map<String, Shipments>();
		Map<String, Shipments> shipmentReturnMap = new Map<String, Shipments>();
		
		for(Shipments shipment: this.shipments) {
			if ((shipment?.carrier_service != null) && shipment?.carrier_service?.toUpperCase().contains('RETURN')) {
				shipmentReturnMap.put(shipment.request_id, shipment);
			}
			else {
				shipmentMap.put(shipment.request_id, shipment);
			}
		}
		for(Order_lines orderLine: order_lines) {
			// Currency__z
			orderLine.currency_Z = transactionInfo?.currency_Z;
			// isTwist
			orderLine.isTwist = isTwist;
			// Source Store : usefull for "Order Actions"
			orderLine.sourceStore = store;
			// Channel  
			orderLine.orderChannel = channel; // TWIST-27414
			// shipment
			if (shipmentMap.containsKey(orderLine.request_id)) orderLine.shipment = shipmentMap.get(orderLine.request_id);
			else orderLine.shipment = new Shipments();
			// shipment RETURN
			if (shipmentReturnMap.containsKey(orderLine.request_id)) orderLine.shipmentReturn = shipmentReturnMap.get(orderLine.request_id);
			else orderLine.shipmentReturn = new Shipments();
			// payment method
			orderLine.paymentMethod = paymentMethod;
			// isExchange - TWIST-34953
			orderLine.isExchange = isExchange;
		}
	}

