.page_description {
  color: #5e5e60;
  margin-top: 50px;
  //float: left;
  font-size: .75em;
  font-family: Georgia, sans-serif;
}



@media screen and (max-width: 1400px) {
  tr {
    display: inline-grid !important;
  }
  table[id$="phoneInputs"] tr {
    display: inline-block !important;
  }
  table[id$="phoneInputs"] tr td:first-child {
    width: 25%;
  }

  table[id$="newsletterAgreementCheckbox"] tr {
    display: inline-block !important;
  }
  table[id$="privacyAgreementCheckbox"] tr {
    display: inline-block !important;
  }
  .page_mandatory_fields {
    font-size: 30px;
    width: 100%;
    text-align: right;
  }
  .page_description {
    font-size: 35px;
    width: 100%;
    text-align: center;
  }
  table[id$="loginForm"] {
    margin-top: 25px;
  }
  table[id$="loginForm"] label {
    font-size: 30px;
    margin-top: 25px;
  }
  table[id$="personalForm"] {
    margin-top: 25px;
  }
  table[id$="personalForm"] label {
    font-size: 30px;
    margin-top: 25px;
  }
  label {
    white-space: inherit;
    font-size: 24px;
    width: 100%;
    line-height: 25px;
    padding-left: 25px;
  }
  #submitButtons {
    text-align: center;
    margin: auto;
  }
  #next {
    text-align: center;
    margin: auto;
  }
  input {
    height: 55px;
    font-size: 35px;
  }
}