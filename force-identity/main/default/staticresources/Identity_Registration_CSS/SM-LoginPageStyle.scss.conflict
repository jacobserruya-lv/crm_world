@mixin placeholders {
  &::-webkit-input-placeholder {/* Chrome/Opera/Safari */ @content}
  &::-moz-placeholder {/* Firefox 19+ */ @content; opacity: 1;}
  &:-moz-placeholder {/* Firefox 18- */ @content; opacity: 1;}
  &:-ms-input-placeholder {/* IE 10+ */ @content}
}

$grey-light: #e2e2e2;
$grey-med: #767676;
$grey-med-2: #6b6b6b;
$grey-dark: #2e2e2e;
$green-med: #4d8822;
$green-med-2: #458318;
$red-med: #d0120b;
$brown-med: #533f34;
$brown-light: transparentize(#533f34, 0.8);

body, td {
  color: $grey-med;
  font-family: Louis Vuitton;
}
table {
  width: 100%;
  border-spacing: 0;
  //table-layout: fixed;
}
input, textarea, select, button {
  font: 1rem Louis Vuitton;
}
*, *:before, *:after {
  box-sizing: border-box;
}
