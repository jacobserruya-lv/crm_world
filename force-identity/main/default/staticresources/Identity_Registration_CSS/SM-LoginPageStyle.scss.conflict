.message {
  //float: left;
  clear: both;
}

.clear {
  clear: both;
}

.id-page {
  width: 75%;
  padding: 30px 30px 25px 30px;
}

.id-page-header {
  display: block;
  width: 100%;
  //padding-bottom: 10px;
  //float: left;
  border-bottom: 1px solid $grey-light;

  &__title {
    //float: left;
    color: black;
    //font-family: Louis Vuitton;
    font-size: 1.6875rem;
    line-height: 3;
    text-transform: uppercase;
    @media screen and (max-width: 1400px) {
      width: 100%;
      font-size: 70px;
      text-align: center;
    }
  }
}

span.password_policy_remark {
  margin-top: 15px;
  //float: left;
  color: #202120;
  font-family: Louis Vuitton Light;
  font-size: 1em;
  line-height: 1.5em;
  text-transform: uppercase;
}

.id-page-form {
  &__mandatory-fields {
    //font-family: 'Georgia', sans-serif;
    //padding: 15px 0;
    //float: right;
    display: block;
    margin: 0.625rem 0;
    color: $grey-med-2;
    font-size: 0.8125rem;
    line-height: 1;
    text-align: right;
  }

  &__section {
    width: 100%;
    max-width: 32.5rem;
    margin: 1.875rem auto 0.625rem;
    //float: left;
    @media screen and (max-width: 1400px) {
      font-size: 34px;
      text-align: center;
    }
  }
  &__section-title {
    //font-family: Louis Vuitton Light;
    color: #000000;
    font-size: 1.4375rem;
    line-height: 1.75;
    text-transform: uppercase;
  }
  &__section-subtitle {
    display: block;
    padding: 2.5rem 0;
    color: $grey-dark;
    font-size: 1rem;
    line-height: 1.25;
  }
  &__section-count {
    //font-family: Louis Vuitton Light;
    margin-left: 0.5ch;
    color: #6b6b6b;
    font-size: 1.4375rem;
