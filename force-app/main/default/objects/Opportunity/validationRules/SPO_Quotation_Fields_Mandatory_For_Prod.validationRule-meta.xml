<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SPO_Quotation_Fields_Mandatory_For_Prod</fullName>
    <active>false</active>
    <description>Quotation fields mandatory for Production at the stage Quotation in Progress</description>
    <errorConditionFormula>$User.BypassVR__c = False &amp;&amp;
ISCHANGED (StageName) &amp;&amp;
ISPICKVAL(StageName , &quot;Quotation submitted&quot;) &amp;&amp; 
ISPICKVAL (SPO_StopBriefReason__c, &quot;&quot;)</errorConditionFormula>
    <errorMessage>Production Team needs to complete the quotation section</errorMessage>
</ValidationRule>
