<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AmountNoCurrency__c</fullName>
    <description>Display amount without currency (multi-currency is not activated). The currency is the currency of the store</description>
    <externalId>false</externalId>
    <formula>IF (
  ISBLANK(Amount),
  &apos;&apos;,
  TEXT(Amount) &amp; &quot; &quot; &amp; SPO_Store__r.Currency__c
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Amount</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
