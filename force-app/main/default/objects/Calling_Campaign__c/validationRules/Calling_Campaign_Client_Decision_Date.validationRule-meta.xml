<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Calling_Campaign_Client_Decision_Date</fullName>
    <active>true</active>
    <description>Date is mandatory when a client decision is chosen</description>
    <errorConditionFormula>AND (
ISBLANK (Client_Decision_Date__c),
NOT (ISPICKVAL (  Client_Decision__c , &quot;&quot;))
)</errorConditionFormula>
    <errorMessage>Please complete the Client Decision Date</errorMessage>
</ValidationRule>
