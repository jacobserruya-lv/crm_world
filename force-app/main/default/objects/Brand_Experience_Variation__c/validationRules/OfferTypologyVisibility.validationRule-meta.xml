<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OfferTypologyVisibility</fullName>
    <active>true</active>
    <description>Visible IF type = Exclusive Offer</description>
    <errorConditionFormula>RecordType.Name != &apos;Exclusive Offer&apos;  &amp;&amp; OfferTypology__c != null</errorConditionFormula>
    <errorDisplayField>OfferTypology__c</errorDisplayField>
    <errorMessage>Offer typology cannot be set when the RecordType is not Exclusive Offer</errorMessage>
</ValidationRule>
