<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OfferCodeVisibility</fullName>
    <active>true</active>
    <description>Visible IF type = Exclusive Offer</description>
    <errorConditionFormula>RecordType.Name != &apos;Exclusive Offer&apos; &amp;&amp; OfferCode__c != Null</errorConditionFormula>
    <errorDisplayField>OfferCode__c</errorDisplayField>
    <errorMessage>Offer code cannot be set when RecordType is not Exclusive Offer</errorMessage>
</ValidationRule>
