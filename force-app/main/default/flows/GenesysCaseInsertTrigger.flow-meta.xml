<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <description>+ To exclude email reply,  check the Case has ParentId  == Null</description>
    <environments>Default</environments>
    <interviewLabel>Genesys Case Insert Trigger {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Genesys Case Insert Trigger</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterLogic>(1 OR 2) AND 3</filterLogic>
        <filters>
            <field>Origin</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Web</stringValue>
            </value>
        </filters>
        <filters>
            <field>Origin</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>chatbot</stringValue>
            </value>
        </filters>
        <filters>
            <field>ParentId</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Case</object>
        <recordTriggerType>Create</recordTriggerType>
        <scheduledPaths>
            <connector>
                <targetReference>Genesys_Email_External_Routing</targetReference>
            </connector>
            <pathType>AsyncAfterCommit</pathType>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Genesys_Email_External_Routing</name>
        <label>Genesys Email External Routing</label>
        <locationX>308</locationX>
        <locationY>288</locationY>
        <flowName>GenesysCaseRouting</flowName>
        <inputAssignments>
            <name>CaseId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Country</name>
            <value>
                <elementReference>$Record.TECH_Country__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>EmailCustomer</name>
            <value>
                <elementReference>$Record.SuppliedEmail</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>IsSpam</name>
            <value>
                <elementReference>$Record.Spam__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Origin</name>
            <value>
                <elementReference>$Record.Origin</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>QueueName</name>
            <value>
                <elementReference>$Record.TECH_Queue__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Recipient</name>
            <value>
                <stringValue>{!$Record.Origin}-{!$Record.TECH_Country__c}</stringValue>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
