        <name>Update_Opportunity_Name</name>
        <label>Update Opportunity Name</label>
        <locationX>290</locationX>
        <locationY>56</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varOppId.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Name</field>
            <operator>NotEqualTo</operator>
            <value>
                <elementReference>OrderNumberPlusBriefCode</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>OrderNumberPlusBriefCode</elementReference>
            </value>
        </inputAssignments>
        <object>Opportunity</object>
