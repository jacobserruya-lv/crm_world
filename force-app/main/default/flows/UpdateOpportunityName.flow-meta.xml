    <description>Update Opportunity Name to Order Number + Brief Code</description>
    <formulas>
        <description>Set order Name to Order Number Plus Brief Code</description>
        <name>OrderNumberPlusBriefCode</name>
        <dataType>String</dataType>
        <expression>{!OpportunityOrderNumber.OrderNumber__c} &amp; &quot;-&quot;&amp;{!OpportunityBriefCode.Name}</expression>
    </formulas>
    <interviewLabel>UpdateOpportunityName</interviewLabel>
    <label>UpdateOpportunityName</label>
    <processType>AutoLaunchedFlow</processType>
