<apex:component >

    <apex:attribute name="title" description="The title of the field."
                    type="String" />
    <apex:attribute name="idComp" description="The title of the field."
                    type="String" />
    <apex:attribute name="SObjectType" description="The title of the field."
                    type="SObject" />
    <apex:attribute name="fieldAPIName" description="The title of the field."
                    type="String" />

    <div class="col-sm-4">
        <div class="form-group">
            <label class="col-sm-4 control-label">{!title}</label>
            <div class="col-sm-8" id="{!idComp}">
                <apex:inputField value="{!SObjectType[fieldAPIName]}" styleclass="form-control" style="cursor: auto; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;" />
            </div>
        </div>
    </div>
</apex:component>