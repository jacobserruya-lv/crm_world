<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>Reassignment of New cases</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHours>China CSC</businessHours>
            <businessHoursSource>Static</businessHoursSource>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.TECH_Country__c</field>
                <operation>equals</operation>
                <value>CHN</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Web&amp;Email Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Escalation_Type__c</field>
                <operation>notEqual</operation>
                <value>Manual</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>China_Priority</assignedTo>
                <assignedToType>Queue</assignedToType>
                <minutesToEscalation>1440</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>None</businessHoursSource>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>Awaiting</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.TECH_Country__c</field>
                <operation>equals</operation>
                <value>CHN</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Web&amp;Email Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Resolution__c</field>
                <operation>notEqual</operation>
                <value>Request to Store</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Escalation_Type__c</field>
                <operation>notEqual</operation>
                <value>Manual</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>China_Priority</assignedTo>
                <assignedToType>Queue</assignedToType>
                <minutesToEscalation>2880</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
