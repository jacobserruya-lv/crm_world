                                        <aura:if isTrue="{!v.reloadColorPicker}">
                                            <lightning:layout verticalAlign="start" multipleRows="true">
                                                <lightning:layoutItem flexibility="grow" size="12" smallDeviceSize="12" mediumDeviceSize="6" largeDeviceSize="12">
