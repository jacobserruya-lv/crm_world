<aura:component extends="c:MIY_FancyModal" controller="MIY_OrderPageController">
    <aura:attribute name="firmOrder" type="SPO_FirmOrder__c" />
    <aura:attribute name="confirmLoading" type="Boolean" default="false" />
    <aura:attribute name="stageLabel" type="String" default="Workflow Progression" />

    <aura:registerEvent name="updateOrderEvent" type="c:MIY_FirmOrderUpdate"/>

    <lightning:overlayLibrary aura:id="modalOverlayLib"/>

    <aura:attribute name="header" type="Aura.Component[]">{!format($Label.c.MIY_OrderPage_Confirm_X, v.stageLabel)}</aura:attribute>
    <div class="exo-flow-confirm-modal">
        <div class="miy-fancy-modal__content">
            <c:miyWorkshopPickList firmOrder="{!v.firmOrder}" />
            <div>{!$Label.c.MIY_OrderPage_ConfirmCloneModal}</div>
            <div>{!$Label.c.MIY_OrderPage_Exo_Flow_Confirm_Description}</div>
        </div>
    </div>
    <aura:attribute name="footerContent" type="Aura.Component[]">
        <lightning:button label="Cancel" onclick="{!c.closeModal}"/>
        <c:LaddaLightningButton label="{!$Label.c.MIY_OrderPage_Confirm}"
                                onclick="{!c.handleConfirmClick}"
                                isLoading="{!v.confirmLoading}"
                                variant="brand"
        />
    </aura:attribute>
</aura:component>