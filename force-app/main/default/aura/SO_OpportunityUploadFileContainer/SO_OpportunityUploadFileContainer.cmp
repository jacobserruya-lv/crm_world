<aura:component controller="SO_OpportunitySPAController" description="FileUploadContainer" implements="flexipage:availableForAllPageTypes,force:hasRecordId">

    <aura:attribute name="frameWidth" type="String" default="280" /><!--250-->
    <aura:attribute name="frameHeight" type="String" default="28" /><!--30-->

    <aura:attribute name="productId" type="Id" />
    <aura:attribute name="opp" type="Opportunity" access="global" default="{SPO_ProductCategory__c : 'Leather goods'}"/>
    <aura:attribute name="product" type="ProductReferential__c" default="{ProductCategory__c : 'Leather goods'}"/>
    <aura:attribute name="files" type="SO_OpportunitySPAController.FileContent[]" />
    <!-- <aura:attribute name="files" type="String[]" /> -->
    <!-- <aura:attribute name="fileIds" type="String[]" /> -->
    <aura:attribute name="attachmentCategory" type="String" default="BRIEF" description="BRIEF / DIMENSIONS"/>

    <!-- Needed to send messages to VF page. But we will get it from VF itself -->
    <aura:attribute name="vfHost" type="String" default="" />
    <!-- Domain of LC for VF to send message -->
    <aura:attribute name="lcHost" type="String" />
    <!--<aura:registerEvent name="fileUploadEvent" type="c:SO_FileUploadEvent" /> -->

    <aura:attribute name="document" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!--<aura:handler event="c:SO_OpportunitySPAEvent" action="{!c.handleApplicationEvent}"/>-->

    <aura:attribute name="frameSrc" type="String" />

    <div class="slds">
        <div aura:id="uiMessage">{!v.body}</div>
        <div class ="slds-grid">
            <div class="slds-col" > <lightning:button   label="Upload File" value="Upload File" onclick="{!c.sendMessage}" disabled="true" aura:id="uploadFileButton"/></div> 
            <div class="slds-col" > <lightning:input style="bottom: 19.80px" aura:id ="fileId" type="file"  name="Doc" multiple="false" onchange="{! c.handleFilesChange }"/></div>
            <div class="slds-col" > {!v.document} </div>
        </div>

        <!-- <lightning:button label="Upload File" value="Upload File" onclick="{!c.sendMessage}" disabled="true" aura:id="uploadFileButton"/>
        <iframe aura:id="vfFrame" src="{! v.frameSrc}" width="{!v.frameWidth}" height="{!v.frameHeight}" class="vfFrame" scrolling="no"/> -->
    </div>
</aura:component>