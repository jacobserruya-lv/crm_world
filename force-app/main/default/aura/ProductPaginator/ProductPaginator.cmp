<aura:component >

    <aura:attribute name="page" type="integer"/>
    <aura:attribute name="pages" type="integer"/>
    <aura:attribute name="total" type="integer"/>
    
    <aura:registerEvent name="productPageChange" type="c:ProductPageChange"/>
    
    <div class="container">
        <div class="left">
            <aura:if isTrue="{!v.page > 1}">
                <lightning:buttonIcon iconName="utility:left" variant="border-filled" onclick="{!c.previousPage}"/>
            </aura:if>
        </div>
        <!--div class="centered">{!v.total} products • page {!v.page} / {!v.pages}</div-->
        <div class="centered">
            <aura:if isTrue="{!v.total > 1}">
                {!v.total}&nbsp;{!$Label.c.ProductPaginator_Products} • {!$Label.c.ProductPaginator_Page}&nbsp;{!v.page} / {!v.pages}
                <aura:set attribute="else">
                    {!v.total}&nbsp;{!$Label.c.ProductPaginator_Product}
                </aura:set>
            </aura:if>
        </div>
        <div class="right">
            <aura:if isTrue="{!v.page &lt; v.pages}">
                <lightning:buttonIcon iconName="utility:right" variant="border-filled" onclick="{!c.nextPage}"/>
            </aura:if>
        </div>
	</div>
    
</aura:component>